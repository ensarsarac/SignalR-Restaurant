
@model UpdateMenuTableDto

@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Masa İşlemleri </h4>
<div class="row">
	<div class="col-md-12">
		<form method="post">
			<input type="hidden" asp-for="MenuTableID" />
		<div class="card">
			<div class="card-header">
					<div class="card-title">Masa Güncelle</div>
			</div>
			<div class="card-body">
				<div class="form-group">
						<label class="form-label">Masa Adını Giriniz: </label>
					<input type="text" asp-for="Name" class="form-control">
				</div>

			</div>
			<div class="card-action">
					<button type="submit" class="btn btn-primary">Masa Güncelle</button>
			</div>
		</div>
		</form>
	</div>
</div>
