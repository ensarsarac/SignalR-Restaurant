
@model List<ResultMenuTableDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title ms-3">Masa İşlemleri</h4>
<div class="row">
<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Masa Listesi</div>
		</div>
		<div class="card-body">
			<div class="card-sub">
					Masa ile işlemleri aşağıdan gerçekleştirebilirsiniz.
			</div>
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Masa Adı</th>
						<th scope="col">Durum</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.MenuTableID</td>
								<td>@item.Name</td>
								<td>@item.Status</td>
								<td><a href="/AdminMenuTable/DeleteMenuTables/@item.MenuTableID/" class="btn btn-outline-danger">Sil</a></td>
								<td><a href="/AdminMenuTable/UpdateMenuTable/@item.MenuTableID/" class="btn btn-outline-warning">Düzenle</a></td>
							</tr>
						}


				</tbody>
			</table>
				<a href="/AdminMenuTable/CreateMenuTables/" class="btn btn-outline-primary">Yeni Masa Ekle</a>
		</div>
	</div>
</div>
</div>