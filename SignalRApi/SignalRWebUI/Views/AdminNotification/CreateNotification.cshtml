
@model CreateNotificationDto

@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Bildirim İşlemleri </h4>
<div class="row">
	<div class="col-md-12">
		<form method="post">
		<div class="card">
			<div class="card-header">
					<div class="card-title">Yeni Bildirim Oluştur</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label class="form-label">Bildirim Tip: </label>
					<input type="text" asp-for="Type" class="form-control">
				</div>
				<div class="form-group">
						<label class="form-label">İkon: </label>
						<input type="text" asp-for="Icon" class="form-control">
				</div>
					<div class="form-group">
						<label class="form-label">Açıklama: </label>
						<textarea asp-for="Description" class="form-control"> </textarea>
					</div>

			</div>
			<div class="card-action">
					<button type="submit" class="btn btn-primary">Bildirim Oluştur</button>
			</div>
		</div>
		</form>
	</div>
</div>

