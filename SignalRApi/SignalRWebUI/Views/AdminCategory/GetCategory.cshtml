
@model SignalRWebUI.Dtos.CategoryDtos.GetCategoryDto

@{
    ViewData["Title"] = "GetCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Kategori İşlemleri </h4>
<div class="row">
	<div class="col-md-12">
		<form method="post">
			<input type="hidden" asp-for="@Model.CategoryID" />
			<div class="card">
				<div class="card-header">
					<div class="card-title">Kategori Güncelle</div>
				</div>
				<div class="card-body">
					<div class="form-group">
						<label for="categoryName">Yeni Kategori Adını Giriniz: </label>
						<input type="text" name="Name" value="@Model.Name" class="form-control" id="categoryName">
					</div>

				</div>
				<div class="card-action">
					<button type="submit" class="btn btn-primary">Kategori Güncelle</button>
				</div>
			</div>
		</form>
	</div>
</div>

