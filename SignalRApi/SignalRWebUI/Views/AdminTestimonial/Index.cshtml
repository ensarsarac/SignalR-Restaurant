
@model List<ResultTestimonialDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<h4 class="page-title ms-3">Referans İşlemleri</h4>
<div class="row">
<div class="col-md-12">
	<div class="card">
		<div class="card-header">
				<div class="card-title">Referans Yorum Listesi</div>
		</div>
		<div class="card-body">
			<div class="card-sub">
					Müşterilerin yaptığı yorumlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
			</div>
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Müşteri Adı</th>
						<th scope="col">Durum</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
						@foreach (var item in Model)
						{
							count++;
							<tr>
								<td>@count</td>
								<td>@item.Name</td>
								<td>@item.Status</td>
								<td><a href="/AdminTestimonial/DeleteTestimonial/@item.TestimonialID/" class="btn btn-outline-danger">Sil</a></td>
								<td><a href="/AdminTestimonial/UpdateTestimonial/@item.TestimonialID/" class="btn btn-outline-warning">Düzenle</a></td>
							</tr>
						}


				</tbody>
			</table>
				<a href="/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Ekle</a>
		</div>
	</div>
</div>
</div>