
@model UserEditDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Profil Ayarları </h4>
<div class="row">
	<div class="col-md-12">
		<form method="post">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Profil Bilgilerini Düzenle</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="categoryName">Adınız: </label>
					<input type="text" asp-for="Name" class="form-control" id="categoryName">
				</div>
					<div class="form-group">
						<label for="categoryName">Soyadınız: </label>
						<input type="text" asp-for="Surname" class="form-control" id="categoryName">
					</div>
					<div class="form-group">
						<label for="categoryName">Mail: </label>
						<input type="email" asp-for="Mail" class="form-control" id="categoryName">
					</div>
					<div class="form-group">
						<label for="categoryName">Kullanıcı Adınız: </label>
						<input type="text" asp-for="Username" class="form-control" id="categoryName">
					</div>
					<div class="form-group">
						<label for="categoryName">Şifreniz: </label>
						<input type="password" asp-for="Password" class="form-control" id="categoryName">
					</div>
			</div>
			<div class="card-action">
				<button type="submit" class="btn btn-primary">Profil Bilgilerimi Güncelle</button>
			</div>
		</div>
		</form>
	</div>
</div>

