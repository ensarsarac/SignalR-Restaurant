
@model CreateBookingDto

@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Rezervasyon İşlemleri </h4>
<div class="row">
	<div class="col-md-12">
		<form method="post">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Yeni Rezervasyon Girişi</div>
			</div>
			<div class="card-body">
				<div class="form-group">
						<label class="form-label">Rezervasyon Sahibinin Adını Giriniz: </label>
					<input type="text" asp-for="@Model.Name" class="form-control">
				</div>
					<div class="form-group">
						<label class="form-label">Telefon Numarası: </label>
						<input type="number" asp-for="@Model.Phone" class="form-control">
					</div>
					<div class="form-group">
						<label class="form-label">Mail Adresi: </label>
						<input type="email" asp-for="@Model.Mail" class="form-control">
					</div>
					<div class="form-group">
						<label class="form-label">Kişi Sayısı: </label>
						<input type="text" asp-for="@Model.PersonCount" class="form-control">
					</div>
					<div class="form-group">
						<label class="form-label">Reservasyon Tarih: </label>
						<input type="date" asp-for="@Model.Date" class="form-control">
					</div>

			</div>
			<div class="card-action">
				<button type="submit" class="btn btn-primary">Rezervasyon Oluştur</button>
			</div>
		</div>
		</form>
	</div>
</div>

