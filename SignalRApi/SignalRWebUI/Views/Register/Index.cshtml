
@model RegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Form-v6 by Colorlib</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<!-- Main Style Css --><link href="~/colorlib-regform-32/css/nunito-font.css" rel="stylesheet" />
	<link href="~/colorlib-regform-32/css/style.css" rel="stylesheet" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" style="width:584px; height:100%">
			</div>
			<form class="form-detail" method="post">
				<h2>Kayıt Formu</h2>
				<div class="form-row">
					<input type="text" asp-for="Name" class="input-text" placeholder="Adınız" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Surname" class="input-text" placeholder="Soyadınız" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Username" class="input-text" placeholder="Kullanıcı Adı" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Mail" class="input-text" placeholder="Mail Adresiniz" required>
				</div>
				
				<div class="form-row">
					<input type="password" asp-for="Password" class="input-text" placeholder="Şifre" required>
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>