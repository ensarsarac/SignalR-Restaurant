<div class="container-fluid">

	<script type="text/javascript">
		$(document).ready(() => {
			var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7037/SignalRHub").build();

			connection.start().then(() => {
				setInterval(() => {
					connection.invoke("SendNotification");
				}, 1000);

			}).catch((err) => { console.log(err) });

			connection.on("NotificationCountByStatusFalse", (value) => { $(".notificationcountnystatusfalse").text(value); });
			connection.on("NotificationCountByStatusFalse2", (value) => { $(".notificationcountnystatusfalse2").text(value + " yeni bildirim var."); });
			connection.on("GetAllNotificationByFalse", (values) => {
				let taga = ``;
				values.forEach((item,index)=>{

					taga += `<a href="#"><div class="${item.type}"> <i class="${item.icon}"></i> </div>
											<div class="notif-content">
												<span class="block">
													${item.description}
												</span>
												<span class="time">${item.date}</span>
											</div>
											</a>
										`;
				});
				$("#addtaga").html(taga);
			});
			
		});
	</script>


