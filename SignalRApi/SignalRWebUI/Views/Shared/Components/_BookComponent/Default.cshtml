
@model CreateBookingDto

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Rezervasyon Yap
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form action="/BookATable/CreateBook/" method="post">
                        <div>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Adınız" />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız" />
                        </div>
                        <div>
                            <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresiniz" />
                        </div>
                        <div>
                            <select class="form-control nice-select wide" asp-for="PersonCount">
                                <option value="" disabled selected>
                                    Kaç Kişi
                                </option>
                                <option value="2">
                                    2
                                </option>
                                <option value="3">
                                    3
                                </option>
                                <option value="4">
                                    4
                                </option>
                                <option value="5">
                                    5
                                </option>
                            </select>
                        </div>
                        <div>
                            <input type="date" class="form-control" asp-for="Date">
                        </div>
                        <div class="btn_box">
                            <button type="submit" id="form">
                                Rezervasyon Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>
