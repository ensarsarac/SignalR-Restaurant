
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>QR Kod Oluşturma Sayfası</h1>

<div class="row">
	<div class="col-md-12">
		<form method="post">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Qr Code Oluşturma Sayfası</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<input type="text" name="value" class="form-control">
				</div>
				
			</div>
			<div class="card-action">
				<button type="submit" class="btn btn-primary">QR Kod Oluştur</button>
			</div>
		</div>
			@if (ViewBag.QrCodeImage != null)
			{
				<img src="@ViewBag.QrCodeImage" alt="" style="width:400px;height:400px;" />
			}
		</form>
	</div>

</div>
